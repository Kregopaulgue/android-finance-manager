<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="138dp"
        android:background="@drawable/entry_background"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="147dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleAccrualView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="ACCRUAL:"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/moneyGainedView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="MONEY GAINED:"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/dateAccrualView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="DATE:"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/showingTitleAccrualView"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/showingMoneyGainedView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/showingDateAccrualView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>