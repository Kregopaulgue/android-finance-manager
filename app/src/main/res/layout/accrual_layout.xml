<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="340dp"
    android:layout_height="81dp"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="45dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/entry_background"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="147dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleAccrualView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:gravity="center"
            android:text="ACCRUAL:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/moneyGainedView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:gravity="center"
            android:text="MONEY GAINED:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/dateAccrualView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:gravity="center"
            android:text="DATE:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showingTitleAccrualView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/showingMoneyGainedView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/showingDateAccrualView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>