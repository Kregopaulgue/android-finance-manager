<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="138dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="147dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/billTitleEntryView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="BILL DESCRIPTION:"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/sumOfMoneyToPayEntryView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="SUM TO PAY:"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/dateToPayView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="DATE TO PAY:"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/showingBillTitleView"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
            <TextView
                android:id="@+id/showingSumOfMoneyToPayView"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/showingDateToPayView"
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:layout_height="46dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>