<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="81dp"
    android:layout_margin="15dp"
    android:background="@drawable/entry_background"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        android:layout_width="147dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/billTitleEntryView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:gravity="center"
            android:text="BILL DESCRIPTION:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/sumOfMoneyToPayEntryView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:gravity="center"
            android:text="SUM TO PAY:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/dateToPayView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:gravity="center"
            android:text="DATE TO PAY:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showingBillTitleView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/showingSumOfMoneyToPayView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/showingDateToPayView"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>
