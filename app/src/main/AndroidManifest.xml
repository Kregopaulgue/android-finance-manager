<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.master.android_finance_manager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FinanceManagerActivity"
            android:label="Financial Manager"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddEntryActivity"
            android:label="Add Entry">
        </activity>
        <activity android:name=".ClarifyEntry"
            android:label="Clarify Entry">
        </activity>
        <activity android:name=".AddAccountActivity"
            android:label="Create Account">
        </activity>
        <activity android:name=".EntriesHistoryActivity"
            android:label="Entries History">
        </activity>
    </application>

</manifest>